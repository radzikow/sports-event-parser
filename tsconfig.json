{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "removeComments": true,
    
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./dist"]
}
